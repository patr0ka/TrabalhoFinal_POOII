<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.appacademia.controller.LoginController"
            prefWidth="400" prefHeight="300"
            style="-fx-background-color: linear-gradient(to bottom, #1e1e2f, #2b2b40);">

    <VBox alignment="CENTER" spacing="15" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

        <Label text="AppAcademia"
               style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: white;" />

        <Label text="Faça login para continuar"
               style="-fx-text-fill: #cccccc;" />

        <!-- Campo de ID do usuário -->
        <TextField fx:id="txtId" promptText="ID do usuário" prefWidth="250"
                   style="-fx-background-color: #3b3b50; -fx-text-fill: white;" />

        <!-- Campo de senha -->
        <PasswordField fx:id="txtSenha" promptText="Senha" prefWidth="250"
                       style="-fx-background-color: #3b3b50; -fx-text-fill: white;" />

        <!-- Botão de login -->
        <Button text="Entrar" fx:id="btnEntrar"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"
                onAction="#btnEntrarOnAction" />

        <!-- Mensagem de erro -->
        <Label fx:id="lblErro" textFill="red" visible="false" />

    </VBox>
</AnchorPane>
